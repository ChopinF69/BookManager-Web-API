<!-- views/sortedBooks.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sorted Books</title>
    <link rel="stylesheet" href="/css/sortedBooksStyles.css">
</head>
<body>
    <h1>Sorted Books</h1>
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Title</th>
                <th>Author</th>
                <th>Pages</th>
            </tr>
        </thead>
        <tbody>
            <% books.forEach(book => { %>
                <tr>
                    <td><%= book.id %></td>
                    <td><%= book.title %></td>
                    <td><%= book.author %></td>
                    <td><%= book.pages %></td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</body>
</html>
